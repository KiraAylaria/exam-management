<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{pageTitle}}</title>

  {{ block("css", "layout.twig") }}
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {{ block("preloader", "layout.twig") }}
  {{ block("navbar", "layout.twig") }}
  {{ block("sidebar", "layout.twig") }}

  <div class="content-wrapper">
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Übersicht</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="?page=dashboard">Home</a></li>
              <li class="breadcrumb-item active">Übersicht</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col">
            <h2>Anstehende Klausuren</h2>
          </div>
        </div>
        <div class="card card-primary">
          <div class="card-header"></div>
          <div class="card-body">
            <div class="row">
              {% for exam in exams %}
                <div class="col-lg-4 col-md-6 col-sm-12 col-12">
                  <div class="card card-secondary">
                    <div class="card-header">
                      <div class="row">
                        <div class="col text-left">
                          <b>{{ exam.subject }}</b>
                        </div>
                        {% if exam.room %}
                          <div class="col text-right">
                            <b class="text-right"> Raum: {{ exam.room }}</b>
                          </div>
                        {% endif %}
                      </div>   
                      <div class="row">
                        <div class="col text-left">
                          <i class="far fa-calendar mr-1"></i>{{ formatDate(exam.date) }}
                        </div>
                          <div class="col text-right">
                            {% if exam.lessonFrom and exam.lessonTo and not exam.timeFrom and not exam.timeTo %}
                              {{ exam.lessonFrom }}. Std. bis {{ exam.lessonTo }}. Std.
                            {% elseif exam.timeFrom is defined and exam.timeTo is defined %}
                              von {{ formatTime(exam.timeFrom) }} <i class="far fa-clock mr-1"></i> bis {{ formatTime(exam.timeTo) }} <i class="far fa-clock mr-1"></i>
                            {% endif %}
                          </div>
                      </div>
                    </div>
                    <div class="card-body">
                    {% if exam.topic or exam.other %}
                      {% if exam.topic|preg_replace("/<\\/?[^>]+(>|$)/", "") != "" %}
                        <div class="row">
                          <div class="col">
                            <b>Themen:</b> {{ exam.topic|preg_replace("/<\\/?[^>]+(>|$)/", "") }}
                          </div>
                        </div>
                      {% endif %}
                      {% if exam.other|preg_replace("/<\\/?[^>]+(>|$)/", "") != "" %}
                        <div class="row">
                          <div class="col">
                            <b>Sonstiges:</b> {{ exam.other|preg_replace("/<\\/?[^>]+(>|$)/", "") }}
                          </div>
                        </div>
                      {% endif %}
                    {% endif %}
                    {% if not exam.topic|preg_replace("/<\\/?[^>]+(>|$)/", "") and not exam.other|preg_replace("/<\\/?[^>]+(>|$)/", "") %}
                      <div class="row">
                        <div class="col">
                          <i class="fas fa-info-circle"></i> Keine Informationen vorhanden!
                        </div>
                      </div>
                    {% endif %}
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
        <div>
          <section class="col-lg-7 connectedSortable">
          </section>
          <section class="col-lg-5 connectedSortable">
          </section>
        </div>
      </div>
    </section>
  </div>
  {{ block("footer", "layout.twig") }}

</div>
{{ block("js", "layout.twig") }}
</body>
</html>
