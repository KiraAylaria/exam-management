<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{pageTitle}}</title>

  {{ block("css", "layout.twig") }}
</head>
<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    {% if isAdmin or isTeacher %}

      {{ block("preloader", "layout.twig") }}
      {{ block("navbar", "layout.twig") }}
      {{ block("sidebar", "layout.twig") }}

      <div class="content-wrapper">
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0">Klassen</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="?page=dashboard">Home</a></li>
                  <li class="breadcrumb-item active">Klassen</li>
                </ol>
              </div>
            </div>
          </div>
        </div>
        <section class="content">
          <div class="container-fluid">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Favoriten</h3>
              </div>
              <div class="card-body">
                <div class="row">
                  {% set entrys = 0 %}
                  {% for favoriteClass in favoriteClasses %}
                    {% if favoriteClass.name != "" %}
                      {% set entrys = entrys+1 %}
                    {% endif %}
                    <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                      <div class="card card-primary border border-primary">
                        <div class="card-body">
                          <h3 class="card-title">
                            <b style="vertical-align: sub">{{favoriteClass.name}}</b>
                          </h3>
                          <div class="text-right card-tools text-white">
                            <button type="button" id="class_{{favoriteClass.id}}" class="btn btn-sm btn-primary">
                              <a href="?page=classoverview&class={{favoriteClass.id}}"><i class="fas fa-eye" style="color: #FFFFFF"></i></a>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  {% endfor %}
                  {% if entrys == 0 %}
                    <p class="mb-0">Keine Einträge vorhanden</p>
                  {% endif %}
              </div>
            </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Alle Klassen</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      {% set entrys = 0 %}
                      {% for class in classes %}
                        {% if class.name != "" %}
                          {% set entrys = entrys+1 %}
                        {% endif %}
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                          <div class="card border border-primary">
                            <div class="card-body">
                              <h3 class="card-title">
                                <b style="vertical-align: sub">{{class.name}}</b>
                              </h3>
                              <div class="text-right card-tools">
                                <button type="button" id="class_{{class.id}}" class="btn btn-sm btn-primary text-white">
                                  <a href="?page=classoverview&class={{class.id}}"><i class="fas fa-eye text-white"></i></a>
                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                      {% endfor %}
                      {% if entrys == 0 %}
                        <p class="mb-0">Keine Einträge vorhanden</p>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      {{ block("footer", "layout.twig") }}

    {% endif %}

    </div>

  {{ block("js", "layout.twig") }}

</body>
</html>
