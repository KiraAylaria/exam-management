<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{pageTitle}}</title>

  {{ block("css", "layout.twig") }}
</head>
<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    {% if isAdmin or isTeacher %}

      {{ block("preloader", "layout.twig") }}
      {{ block("navbar", "layout.twig") }}
      {{ block("sidebar", "layout.twig") }}

      <div class="content-wrapper">
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0">Klassen</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="?page=dashboard">Home</a></li>
                  <li class="breadcrumb-item active">Klassen</li>
                </ol>
              </div>
            </div>
          </div>
        </div>
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col">
                <h2>Favoriten</h2>
              </div>
            </div>
            <div class="card card primary">
              <div class="card-header" style="background-color: #EE4D00">
              </div>
              <div class="card-body">
                <div class="row">
                  {% for favoriteClass in favoriteClasses %}
                    <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                      <div class="card">
                        <div class="card-header" style="background-color: #EE4D00">
                          <h3 class="card-title text-white">
                            <b style="vertical-align: sub">{{favoriteClass.name}}</b>
                          </h3>
                          <div class="card-tools text-white pr-3">
                            <button type="button" id="class_{{favoriteClass.id}}" class="btn btn-sm" style="background-color: #FFFFFF; color: #EE4D00">
                              <a href="?page=classoverview&class={{favoriteClass.id}}"><i class="fas fa-eye" style="color: #EE4D00"></i></a>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  {% endfor %}
              </div>
            </div>
            </div>
            <br>
            <div class="row">
              <div class="col">
                <h2>Alle Klassen</h2>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="card">
                  <div class="card-header" style="background-color: #EE4D00">
                  </div>
                  <div class="card-body">
                    <div class="row">
                      {% for class in classes %}
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                          <div class="card" style="border: 1px solid #EE4D00">
                            <div class="card-header">
                              <h3 class="card-title">
                                <b style="vertical-align: sub">{{class.name}}</b>
                              </h3>
                              <div class="card-tools pr-3">
                                <button type="button" id="class_{{class.id}}" class="btn btn-sm text-white" style="background-color: #EE4D00">
                                  <a href="?page=classoverview&class={{class.id}}"><i class="fas fa-eye text-white"></i></a>
                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                      {% endfor %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      {{ block("footer", "layout.twig") }}

    {% endif %}

    </div>

  {{ block("js", "layout.twig") }}

</body>
</html>
